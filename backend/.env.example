# Backend Environment Configuration
# Copy this file to .env and modify the values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_PATH=./data/annotations.db

# JWT Configuration (IMPORTANT: Change in production!)
JWT_SECRET=your-secure-jwt-secret-minimum-32-characters-change-in-production
JWT_EXPIRES_IN=24h

# Authentication Configuration
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password-change-immediately
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Video Configuration
VIDEOS_PATH=./videos
MAX_FILE_SIZE=500

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute